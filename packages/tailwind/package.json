{
  "name": "@steedos/tailwind",
  "private": false,
  "version": "1.22.0-alpha.6",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development postcss tailwind-src.css -o dist/steedos-tailwind.min.css",
    "prod": "cross-env NODE_ENV=production postcss tailwind-src.css -o dist/steedos-tailwind.min.css",
    "copy-to-public": "cp dist/steedos-tailwind.min.css ../webapp/public/assets/styles",
    "prepare": "yarn prod && yarn copy-to-public"
  },
  "devDependencies": {
    "@tailwindcss/custom-forms": "^0.2.1",
    "@tailwindcss/typography": "^0.2.0",
    "hex-rgb": "^4.1.0",
    "postcss-cli": "^6.1.2",
    "postcss-selector-parser": "^6.0.2",
    "tailwindcss": "^1.6.2",
    "tailwindcss-theming": "^3.0.0-beta.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "cssnano": "^4.1.10"
  }
}
